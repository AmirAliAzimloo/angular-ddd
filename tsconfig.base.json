{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-ddd/application": [
        "libs/app-web/architecture/application/src/index.ts"
      ],
      "@angular-ddd/domain": ["libs/app-web/architecture/domain/src/index.ts"],
      "@angular-ddd/infrastructure": [
        "libs/app-web/architecture/infrastructure/src/index.ts"
      ],
      "@angular-ddd/persistence": [
        "libs/app-web/architecture/persistence/src/index.ts"
      ],
      "@angular-ddd/ui-services": ["libs/app-web/ui-services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
